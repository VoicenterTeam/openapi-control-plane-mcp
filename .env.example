# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Storage
DATA_DIR=./data
BACKUP_DIR=./backups

# Logging
LOG_LEVEL=info

# Custom OpenAPI Extensions
# Format: entity.properties.attributeName=Description for LLM
# Supported entities: info, endpoint, parameter, schema, response, server, tag
# Example: endpoint.properties.logo=Logo of endpoint
# These will be accessible via unflatify as endpoint.properties.logo
X_ATTRIBUTE_INFO_LOGO=Logo URL for the API
X_ATTRIBUTE_INFO_CATEGORY=API category for organization
X_ATTRIBUTE_ENDPOINT_LOGO=Logo of endpoint for documentation
X_ATTRIBUTE_ENDPOINT_TEAM=Team responsible for this endpoint
X_ATTRIBUTE_ENDPOINT_INTERNAL=Whether endpoint is internal only
X_ATTRIBUTE_ENDPOINT_VISIBILITY=Visibility level (public/internal/private)
X_ATTRIBUTE_PARAMETER_HINT=Parameter usage hint for LLM to know how to use it
X_ATTRIBUTE_PARAMETER_EXAMPLE_CONTEXT=Context for when to use this parameter
X_ATTRIBUTE_SCHEMA_TEAM=Team owning this schema definition
X_ATTRIBUTE_SCHEMA_CATEGORY=Schema category for organization
X_ATTRIBUTE_RESPONSE_SCENARIO=Typical scenario when this response occurs

# Features (for future use)
ENABLE_GIT_INTEGRATION=false
AUTO_BACKUP_INTERVAL=3600

# Authentication (for future implementation)
# API_KEY=
# JWT_SECRET=
# JWKS_URL=

